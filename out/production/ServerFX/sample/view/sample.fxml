<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.controller.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label fx:id="lblUsername"   text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" ></Label>
    <Label fx:id="lblPassword"   text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>

    <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" ></TextField>
    <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" ></PasswordField>

    <Button fx:id="btnLogin" GridPane.columnIndex="1" GridPane.rowIndex="2" text="Login" prefWidth="150" onAction="#loginClick"></Button>

</GridPane>