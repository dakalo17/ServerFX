<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.LoginController">
<!--            prefHeight="400.0" prefWidth="600.0">-->


    <Label fx:id="lblUsername"   text="Username"  AnchorPane.leftAnchor="30"  AnchorPane.topAnchor="50"></Label>
    <Label fx:id="lblPassword"   text="Password"  AnchorPane.leftAnchor="30" AnchorPane.topAnchor="80"></Label>

    <TextField fx:id="txtUsername" AnchorPane.leftAnchor="105" AnchorPane.topAnchor="50"></TextField>
    <PasswordField fx:id="txtPassword" AnchorPane.leftAnchor="105" AnchorPane.topAnchor="80"></PasswordField>

    <Button fx:id="btnLogin" text="Login" prefWidth="150" onAction="#loginClick"
            AnchorPane.leftAnchor="105"  AnchorPane.topAnchor="120" ></Button>

</AnchorPane>
